.container-fluid.login
  .row
    .col-lg-8.login__bg.login__max-height
      .login__info
        .login__logo
          = image_tag 'logo.png', alt: 'Logo'
          |  AgendaMail
        p Comunique-se.
    .col-lg-4.login__max-height
      .login__content
        h1 Entrar
        div
          = form_for(resource, :as => resource_name, :url =>  session_path(resource_name)) do |f|
            .login__form__field
              = f.label :email
              = f.text_field :email, class: 'form-control border-input', placeholder: 'Email', autofocus: true
            .login__form__field
              = f.label 'Senha'
              = f.password_field :password, class: 'form-control border-input', placeholder: 'Senha'
            = f.submit 'Entrar', class: "login__button"
            .login__form__links
              = render "devise/shared/links"